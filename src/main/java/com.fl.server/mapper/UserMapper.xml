<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fl.server.mapper.UserMapper">
    <select id="selectByEmail" resultType="com.fl.server.object.User">
        select * from user where email=#{email};
    </select>
    <insert id="insert">
        insert into user (email,username,password,company) values (#{user.email},#{user.username},#{user.password},#{user.company});
    </insert>
    <update id="update">
        update user set username=#{user.username},password=#{user.password},company=#{user.company};
    </update>
    <delete id="deleteByEmail">
        delete from user where email=#{email};
        delete from usertask where email=#{email};
    </delete>
</mapper>